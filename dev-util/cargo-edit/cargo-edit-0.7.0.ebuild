	inherit git-r3
	EGIT_REPO_URI="https://github.com/killercup/cargo-edit"
else
	KEYWORDS="~amd64 ~x86"
	SRC_URI="https://github.com/killercup/cargo-edit/archive/v${PV}.tar.gz -> ${P}.tar.gz $(cargo_crate_uris ${CRATES})"
fi

